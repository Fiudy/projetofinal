<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Configuração do servlet para AdicionarContatoServlet -->
<servlet>
    <servlet-name>AdicionarContatoServlet</servlet-name>
    <servlet-class>com.example.servlets.AdicionarContatoServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>AdicionarContatoServlet</servlet-name>
    <url-pattern>/AdicionarContatoServlet</url-pattern>
</servlet-mapping>


    <!-- Configuração do servlet para AlterarContatoServlet -->
    <servlet>
    <servlet-name>AlterarContatoServlet</servlet-name>
    <servlet-class>com.example.servlets.AlterarContatoServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>AlterarContatoServlet</servlet-name>
    <url-pattern>/AlterarContatoServlet</url-pattern>
</servlet-mapping>
    <!-- Configuração do servlet para ListarContatosServlet -->
   <servlet>
    <servlet-name>ListarContatoServlet</servlet-name>
    <servlet-class>com.example.servlets.ListarContatoServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ListarContatoServlet</servlet-name>
    <url-pattern>/ListarContatoServlet</url-pattern>
</servlet-mapping>


</web-app>

